
<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <debug-overrides>
        <trust-anchors>
            <!-- Trust user added CAs while debuggging -->
            <certificates src="user"/>
            <!-- Trust system CAs -->
            <certificates src="system"/>
        </trust-anchors>
    </debug-overrides>
    
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <!-- Trust system CAs -->
            <certificates src="system"/>
            <!-- Additionally trust user added CAs -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Domain-specific config for Lovable development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">lovableproject.com</domain>
        <domain includeSubdomains="true">sandbox.lovable.dev</domain>
        <domain includeSubdomains="true">4915bcda-5df4-4f5d-8f4f-54a36dbac309.lovableproject.com</domain>
        <domain includeSubdomains="true">4915bcda-5df4-4f5d-8f4f-54a36dbac309.sandbox.lovable.dev</domain>
    </domain-config>
    
    <!-- Domain-specific config for your production domain -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">vidranker.space</domain>
        <domain includeSubdomains="true">www.vidranker.space</domain>
        <trust-anchors>
            <certificates src="system"/>
            <certificates src="user"/>
        </trust-anchors>
    </domain-config>
    
    <!-- Local development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">192.168.1.0/24</domain>
    </domain-config>
</network-security-config>
